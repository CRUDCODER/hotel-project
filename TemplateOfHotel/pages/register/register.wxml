<view class="page">
    <view class="weui-form">
      <view class="weui-form__text-area">
        <view class="weui-form__title">会员注册</view>
      </view>
      <view class="weui-form__control-area">
        <view class="weui-cells__group weui-cells__group_form">
            <view class="weui-cells__title">输入框</view>
            <view class="weui-cells weui-cells_form">
              <view class="weui-cell">

                <view class="weui-cell__hd"><label class="weui-label">姓  名</label></view>
                <view class="weui-cell__bd">
                    <input class="weui-input"  bindinput="name"  placeholder="请输入真实姓名"/>
                </view>

              </view>
              <view class="weui-cell">

                <view class="weui-cell__hd"><label class="weui-label">电  话</label></view>
                <view class="weui-cell__bd">
                    <input class="weui-input"  bindinput="phone"  placeholder="请输入联系电话"/>
                </view>

              </view>
              <view class="weui-cell">

                <view class="weui-cell__hd"><label class="weui-label">身份证</label></view>
                <view class="weui-cell__bd">
                    <input class="weui-input"  bindinput="card" placeholder="请输入身份证号码"/>
                </view>

              </view>
              <view class="weui-cell">

                <view class="weui-cell__hd"><label class="weui-label">邮  箱</label></view>
                <view class="weui-cell__bd">
                    <input class="weui-input"  bindinput="mail"  placeholder="请输入邮箱"/>
                </view>

              </view>
              <view class="weui-cell">

                <view class="weui-cell__hd"><label class="weui-label">密  码</label></view>
                <view class="weui-cell__bd">
                    <input class="weui-input" password="true" bindinput="password"  placeholder="请输入会员卡密码"/>
                </view>
              </view>

              <view class="weui-cell">

                <view class="weui-cell__hd"><label class="weui-label">相  片</label></view>
                <view class="weui-cell__bd">
                    <view class="weui-uploader__file" >
                          <image class="weui-uploader__img" src="{{memberImg}}" mode="aspectFill" />
                    </view>
                    <view class="weui-uploader__input-box">
                    <view class="weui-uploader__input" bindtap="chooseImage"></view>
                    </view>
                </view>
              </view>
            
            <!-- <view class="weui-cell__hd"><label class="weui-label">相 片</label></view>
                <view class="weui-cell__bd">
                    <view class="weui-uploader__file" bindtap="previewImage" id="{{files}}">
                                        <image class="weui-uploader__img" src="{{files}}" mode="aspectFill" />
                    </view>
                    <view class="weui-uploader__input" bindtap="chooseImage"></view>
                </view>
             </view>
            </view> -->


            </view>

        </view>
      </view>
      <view class="weui-form__tips-area">
      <view style="display:flex">

        <view class="weui-form__opr-area" style="width:40%;margin-left:auto;margin-right:auto">
            <button type="primary" bindtap="register" >确认注册</button>
        </view>
      </view>
      </view>

      <view class="weui-form__tips-area">
        <view class="weui-form__tips">
          点击下一步即表示<navigator href="javascript:;">同意用户协议</navigator>
        </view>
      </view>

    </view>
</view>
