<view class='hotelListContent'>
     <template is='hotelListItem' wx:for='{{hotelArray}}' data="{{imageUrl:item.image,hotelName:item.name,score:item.score,services:item.service,address:item.address,distance:item.distance,price:item.price,startDate:item.startDate,endDate:item.endDate,roomNumber:item.roomNumber}}" />

     <view wx:if="{{loadenable}}" class="loadmore">
          <image src='../../res/images/loading.gif' class="loading" mode="scaleToFill" style='margin:auto 0;'></image>
          <text style='margin-left:20rpx;'>正在加载更多</text>
     </view>
