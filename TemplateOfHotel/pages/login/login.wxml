<view class="page">
    <view class="weui-form">
      <view class="weui-form__text-area">
        <view class="weui-form__title">会员登陆</view>
      </view>
      <view class="weui-form__control-area">
        <view class="weui-cells__group weui-cells__group_form">
            <view class="weui-cells__title">输入框</view>
            <view class="weui-cells weui-cells_form">
              <view class="weui-cell">
                <view class="weui-cell__hd"><label class="weui-label">卡号</label></view>
                <view class="weui-cell__bd">
                    <input class="weui-input" type="text" bindinput="memberNumber" pattern="[0-9]*" placeholder="请输入会员卡号"/>
                </view>

              </view>
              <view class="weui-cell">
                <view class="weui-cell__hd"><label class="weui-label">密码</label></view>
                <view class="weui-cell__bd">
                    <input class="weui-input" password="true" bindinput="memberPassword" pattern="[0-9]*" placeholder="请输入会员卡密码"/>
                </view>

              </view>
            </view>

        </view>
      </view>
      <view class="weui-form__tips-area">
      <view style="display:flex">

      <view class="weui-form__opr-area" style="width:40%;margin-left:auto;margin-right:auto">
        <button type="primary" bindtap="login">登录</button>
      </view>
<view class="weui-form__opr-area" style="width:40%;margin-left:auto;margin-right:auto">
        <button type="primary" bindtap="register" >注册</button>
      </view>
      </view>
      </view>

      <view class="weui-form__tips-area">
        <view class="weui-form__tips">
          点击下一步即表示<navigator href="javascript:;">同意用户协议</navigator>
        </view>
      </view>

    </view>
</view>
